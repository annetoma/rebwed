/*
 * General Styles
*/

html {
  font-size: 100%;
}

body{
  margin: 0px;
  font-family: 'Open-Sans', arial, sans-serif;
}

/* Box Model Hack */
* {
  -moz-box-sizing: border-box; /* Firexfox */
  -webkit-box-sizing: border-box; /* Safari/Chrome/iOS/Android */
  box-sizing: border-box; /* IE */
}

/* Clear Class */
.clear {
  clear: both;
}

.clearfix:after {
  content: "";
  display: table;
  clear: both;
}

p {
  font-size: 1rem;
  color: #464655;
  line-height: 1.5;
  margin-bottom: 28px;
}

strong {
  font-weight: bold;
}



/*
 * General Styles
*/


h1, h2, h3 {
  font-family: 'Lobster', cursive;
  color: #F4442E;
  text-align: center;
}

h1 {
  font-size: 3rem;
  margin-bottom: -30px;
}

h2 {
  font-size: 2rem;
  margin-bottom: 32px;
}

h3 {
  font-size: 1.8rem;
  margin-bottom: 20px;
}

a:link {
    color: #17BEBB;
    text-decoration: none;


}
a:visited {
        text-decoration: none;
color: #17BEBB;

}
a:hover {
text-decoration: underline;
color: #DD127B;

}

a.button {
    background-color: #2AB7CA; /* Blue */
    border: none;
    color: white;
    padding: 15px 5px;
    width: 100px;
    margin: 3px 1px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
}

ul li {
  color: #464655;
  text-align: left;
}

